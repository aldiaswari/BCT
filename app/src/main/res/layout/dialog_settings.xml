<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey800"
    android:paddingTop="8dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/green_dark"
        android:orientation="horizontal"
        android:padding="16dp"
        android:visibility="visible">

        <ImageView
            android:layout_width="50dp"
            android:src="@drawable/ic_settings_white_24dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Settings"
            android:textAllCaps="true"

            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="visible" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginBottom="15dp"
            android:text="Settings sesuai kebutuhan anda"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingRight="8dp">
        <Switch
            android:id="@+id/sw_magiskmode"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:text="Fused"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingRight="8dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp"

        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:paddingRight="8dp">
        <Switch
            android:id="@+id/sw_ping"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:text="Ping Driver"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp"

        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:paddingRight="8dp">
        <Switch
            android:id="@+id/sw_auto_random"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:text="Auto Random"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp"

        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:paddingRight="8dp">
        <Switch
            android:id="@+id/sw_random_goy"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:text="Fake Random Goyang"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp"

        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:paddingRight="8dp">
        <Switch
            android:id="@+id/sw_ping_gscm"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:text="Ping GCM"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:paddingRight="8dp">
        <Switch
            android:id="@+id/sw_ghostmode"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:text="Ghost Mode"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textMin"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="0dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="0"/>
        <TextView
            android:id="@+id/textMax"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="0dp"
            android:textColor="@color/white"

            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="25"/>
    </LinearLayout>
    <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
        android:id="@+id/rangeSeekbarInterval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        app:min_value="0"
        app:max_value="25"
        app:steps="1"
        app:bar_color="#f7888c"
        app:bar_highlight_color="#ea1017"
        app:left_thumb_color="#990d16"
        app:right_thumb_color="#990d12"
        app:left_thumb_color_pressed="@color/colorAccent"
        app:right_thumb_color_pressed="@color/colorAccent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="Jika ingin menggunakan Ghost Mode isi data driver. seperti FCM_TOKEN , access_token, dan ID Driver"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_ok_sett"
            android:layout_width="0dp"
            android:layout_height="48dp"

            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@color/grean800"
            android:text="@string/Ok"
            android:textColor="#00b0ff" />


    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>