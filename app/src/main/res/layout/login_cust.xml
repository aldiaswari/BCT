<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apc="http://schemas.android.com/apk/lib/com.root.rootcheck" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pink"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login akun customer"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:text="adjd-dadhdjd-dhdfddfhdf-dsdj"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/loginpage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:paddingTop="6dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:background="@color/bg"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0.2"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et1"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginRight="4dp"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:hint="Contoh : 8121XXXXXX"
                        android:inputType="none|text|textNoSuggestions|number|phone"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.8"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/but1"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@color/green_light"
                        android:gravity="center"
                        android:text="LOGIN"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:weightSum="0.8" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:background="@color/bg"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0.2"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et2"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginRight="4dp"
                        android:background="@color/transparent"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="Kode OTP"
                        android:inputType="none|text|textNoSuggestions|number|phone"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.8"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/but2"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@color/blue_dark"
                        android:gravity="center"
                        android:text="Verify"
                        android:textColor="@color/black"
                        android:textSize="10dp"
                        android:weightSum="0.8" />
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/exit"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@color/orange"
                android:gravity="center"
                android:text="EXIT"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:weightSum="0.8" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>